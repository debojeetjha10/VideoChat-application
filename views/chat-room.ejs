<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- Getting the ROOM_ID and MY_NAME from the server  -->
  <!-- Importing all the StyleSheets -->
  <script>
    const ROOM_ID = "<%= roomId %>";
    var MY_NAME = "<%= user %>"
    // if the server does not return any name then  get it from the user
    // in the window prompt
    if(MY_NAME=="" || MY_NAME=='undefined'){
       MY_NAME = window.prompt('Enter Your Name: ');

    }
  </script>
  <script  defer src="/socket.io/socket.io.js"></script>
  <script  defer src="script.js" type="text/javascript"></script>
  <script  defer src="scripts/button-control.js" type="text/javascript"></script>
  <script defer src = 'scripts/load-chat.js'  type='text/javascript'></script>
  <script defer src = 'scripts/message-socket.js'></script>
  <link  rel='stylesheet' href = 'style.css'/>
  <link  rel='stylesheet' href = 'stylesheets/navbar.css'/>
  <link  rel='stylesheet' href = 'stylesheets/main-content.css'/>
  <link  rel='stylesheet' href = 'stylesheets/sidebar.css'/>
  <link  rel='stylesheet' href = 'stylesheets/chat-messages.css'/>
  <link  rel='stylesheet' href = 'stylesheets/footer.css'/>
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="icon" href="logos/teams_icon.ico" />
  <!-- Website Title -->
  <title>Teams Meeting || Cloned By Debojeet Jha</title>
</head>
<body>
  <!-- Navbar of the website it 
  contains the call-control buttons,teams logo ,
  user-logo -->
  <header id='navbar'>
    <div id='teams-logo-container'>
      <img id="teams-logo" title='teams logo ' class='navbar-logo' src='logos/teams.png'  alt='Teams Logos'/>
    </div>
    <div>
      <form onsubmit="searchOnBing">
        <input id='search-input-box' type='text'  placeholder="search on bing with ðŸ’—" >
        <button type='submit' id = 'search-button'> search</button>
        
      </form>
    </div>
    <div class='navbar-logo-left'>
      <div class="navbar-logo-container">
        <img id="copy-roomId-button" class='navbar-logo ' src='logos/chain.png'  title='Copy Room Id' alt='Button'/>
      </div>
      <div class="navbar-logo-container">
        <img id="user-logo" class='navbar-logo' src='logos/user.png'  alt='Button'/>
      </div>
    </div>
  </header>
  <!-- This is the Sidebar 
  contains the clock and the calender button  -->
  <sidebar>
    <div id="sidebar">
      <div id='calender-clock-container'>
        <div id="calender-img-container">
          <img id='calender-img' src='logos/calender.png' alt='calender'>
        </div>
      </div>
    </div>
  </sidebar>
  <!-- This is the main panel contains the main-content(video-grid and message panel) -->
  <main id="main-pannel">
      <div id='message-heading'>
          <h1>Message of Your Meeting with Id: </h1>
          <p id='meeting-room-id-text'>

          </p>
          <script>
            let mettingText = document.getElementById('meeting-room-id-text')
            mettingText.innerHTML = ROOM_ID
          </script>
        </div>
        <div id="messages-container">
          <ul id="messages"></ul>
          <div id = 'chat-message-container' >
            
            <input type="text" id="chat-message" placeholder="type your message here">
            <button id='send-message-button'> SEND</button>
          </div>
        </div>
  </main>
 <!-- This iframe contains the calender its display bis controlled by
 the calender button in the sidebar -->
<iframe id='google-calender' class = "w3-animate-opacity"src="https://calendar.google.com/calendar/embed?src=0osbnpsm0bj4j8lhmq5k7edf58%40group.calendar.google.com&ctz=Asia%2FKolkata" ></iframe>
<!-- this is the footer   -->
<footer></footer>
</body>
</html>